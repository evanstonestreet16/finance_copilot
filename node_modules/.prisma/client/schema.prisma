datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  email     String?   @unique
  accounts  Account[]
}

model Account {
  id        String        @id @default(cuid())
  user      User?         @relation(fields: [userId], references: [id])
  userId    String?
  name      String
  provider  String?
  type      String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  txns      Transaction[]
}

model Transaction {
  id          String   @id @default(cuid())
  account     Account? @relation(fields: [accountId], references: [id])
  accountId   String?
  ts          DateTime
  amount      Decimal
  currency    String?  @default("USD")
  description String
  merchant    String?
  category    String?
  source      String?  @default("csv")
  createdAt   DateTime @default(now())

  @@index([accountId, ts])
  @@index([category])
}
